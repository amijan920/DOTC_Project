<%= render "admin/admin_navbar" %>

<script>
	var view = "edit_port";
</script>

<div id="contents" class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h3>Edit Point of Interest</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6 col-md-offset-3 edit-port-form">
			<%= form_tag edit_port_path, :method => "post", :class => "form-horizontal" do |f| %>
				<div class="form-group">
					<%= label_tag(:label_name, "Name:", :class => "control-label col-md-2") %>
					<div class="col-md-10">
					 <%= text_field_tag(:name, @port.name, :class => "form-control")  %>
					</div>
				</div>

				<div class="form-group">
					<%= label_tag(:label_name, "Category:", :class => "control-label col-md-2") %>
					<div class="col-md-10">
					 <%= text_field_tag(:name, @port.category.name, :class => "form-control")  %>
					</div>
				</div>

				<div class="form-group">
					<%= label_tag(:label_name, "Latitude:", :class => "control-label col-md-2", :align => "left") %>
					<div class="col-md-10">
					 <%= text_field_tag(:name, @port.lat_deg, :class => "form-control")  %>
					</div>
				</div>

				<div class="form-group">
					<%= label_tag(:label_name, "Longitude:", :class => "control-label col-md-2") %>
					<div class="col-md-10">
					 <%= text_field_tag(:name, @port.lon_deg, :class => "form-control")  %>
					</div>
				</div>

				<div class="form-group">
					<%= label_tag(:label_name, "Description:", :class => "control-label col-md-2") %>
					<div class="col-md-10">
						<%= text_area_tag(:name, @port.description, :class => "form-control", :rows => 5)  %>
					</div>
				</div>


			<% end %>
		</div>
	</div>
</div>