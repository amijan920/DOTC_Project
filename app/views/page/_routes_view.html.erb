<script id="routes-info-template" type="text/x-handlebars-template">
	{{#each routeList}}
	  <div id="route-{{id}}" class="route-info panel-sub" data-id="{{@index}}" data-rid="{{id}}">
			<div class="bold">
				{{name}}
			</div>
			<div class="route-visualization">
			</div>
		</div>
  {{/each}}
</script>

<script id="routes-options-template" type="text/x-handlebars-template">
	{{#each routeList}}
	  <div class="panel-sub">
			<div class="bold">
				{{route_id}}
			</div>
			<div class="small-desc">
				<table class="route-table">
					<tr>
						<td>Departure Time:</td>
						<td align="right">{{format_time departure_time}}</td>
					</tr>
					<tr>
						<td>Arrival Time:</td>
						<td align="right">{{format_time arrival_time}}</td>
					</tr>
					<tr>
						<td>Frequency:</td>
						<td align="right">{{get_days days}}</td>
					</tr>
				</table>
			</div>
		</div>
  {{/each}}
</script>

<script id="no-routes-template" type="text/x-handlebars-template">
	<div id="no-route-available" class="panel-sub">
		<p>
			No suggested routes
		</p>
	</div>
</script>