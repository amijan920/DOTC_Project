<%= render "admin/admin_navbar" %>

<script>
  var view = "sign_in";
</script>

<div id="contents" class="container">

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h3>Admin Log in</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal", :id => "sign-in"}) do |f| %>

        <div class="form-group">
          <%= label_tag(:label_email, :Email, :class => "control-label col-md-3") %>
          <div class="col-md-9">
           <%= f.email_field(:email, :id => "email", autofocus: true, :required => true, :class => "form-control")  %>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag(:label_password, :Password, :class => "control-label col-md-3") %>
          <div class="col-md-9">
           <%= f.password_field(:password, :id => "password", autocomplete: false, :required => true, :class => "form-control")  %>
          </div>
        </div>


        <!-- <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div> -->

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="form-group">
          <div class="col-md-offset-3 col-md-9">
           <%= f.submit("Log in", :id => "sign_in", :class => "btn btn-primary", :name => "sign_in") %>
          </div>
        </div>
      <% end %>

      <!-- <%= render "admins/shared/links" %> -->
    </div>
  </div>
</div>
